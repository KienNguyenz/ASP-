    ViewBag.Title = "Delete";
}

<h2>Xoá</h2>

<h3>Bạn có chắc chắn muốn xoá chứ?</h3>
<div>
    <h4>Danh mục</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CatalogyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CatalogyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm())
